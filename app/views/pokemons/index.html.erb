<h1>Pokemon World Home Page</h1>

<% if current_user %>
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Sign Up", new_user_path %>
  <%= link_to "Log In", login_path %>
<% end %>

<% @pokemons.each do |pokemon| %>
  <h2>
    <%= pokemon.name %>
    <% if current_admin? %>
      <%= link_to "Delete Pokemon", pokemon_path(pokemon), method: :delete %>
    <% end %>
  </h2>
  <p>
    Type: <%= pokemon.pokemon_type %>
  </p>
<% end %>
