<h1>Create New Account</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :confirmation_password %>
  <%= f.password_field :confirmation_password %>

  <%= f.submit "Create Account"%>

<% end %>
